<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/subjectImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:contentDescription="@string/subject_content_desc"
        app:srcCompat="@drawable/ic_chrome_reader_mode_black_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subjectTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Przedmiot"
            android:textColor="@color/darkGrey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lecturerTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="WykÅ‚adowca"
            android:textSize="15sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/removeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:checked="false" />
</LinearLayout>